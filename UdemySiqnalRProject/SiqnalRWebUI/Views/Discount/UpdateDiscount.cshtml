@model SiqnalRWebUI.Dtos.DiscountDto.UpdateDiscountDto
@{
    ViewData["Title"] = "Update Discount";
    ViewData["ActiveDiscount"] = "active";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Discount Create Form</div>
                        </div>
                        <div class="card-body">
                            <input asp-for="DiscountID" hidden />
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" asp-for="Title" class="form-control" id="title">
                            </div>
                            <div class="form-group">
                                <label for="amount">Amount</label>
                                <input type="text" asp-for="Amount" class="form-control" id="amount">
                            </div>
                            <div class="form-group">
                                <label for="image">Image URL</label>
                                <input type="text" asp-for="ImageURL" class="form-control" id="image">
                            </div>
                            <div class="form-group">
                                <label for="description">Description</label>
                                <textarea asp-for="Description" class="form-control" id="description"></textarea>
                            </div>
                            <div class="form-check" hidden>
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Status" type="checkbox" value="@Model.Status">
                                </label>
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

