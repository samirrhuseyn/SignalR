@model List<SiqnalRWebUI.Dtos.DiscountDto.ResultDiscountDto>
@{
    ViewData["Title"] = "Discounts";
    ViewData["ActiveDiscount"] = "active";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Discounts</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-body">
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Title</th>
									<th scope="col">Amount</th>
									<th scope="col">Status</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Title</td>
										<td>@item.Amount%</td>
										<td><a href="/Discount/#Discount/@item.DiscountID" class="btn btn-outline-warning">Change</a></td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-danger">Delete</a></td>
										<td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-outline-success">Update</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Discount/CreateDiscount" class="btn btn-outline-primary">+ Add Discount</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
