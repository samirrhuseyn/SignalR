@model List<SiqnalRWebUI.Dtos.BasketDto.ResultBasketDto>
@{
    ViewData["Title"] = "Basket";
    int count = 0;
    decimal basketTotalPrice = 0;
    decimal vat = 0;

}
<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeadComponentPartial")
<link href="~/feane-1.0.0/css/phonemedia.css" rel="stylesheet" />
<body class="sub_page">

    <div class="hero_area">
        <div class="bg-box">
            <img src="~/feane-1.0.0/images/hero-bg.jpg" alt="">
        </div>
        <!-- header section strats -->
        <header class="header_section">
            <div class="container">
                <nav class="navbar navbar-expand-lg custom_nav-container ">
                    <a class="navbar-brand" href="/Home/Index">
                        <span>
                            @await Component.InvokeAsync("_UILayoutProjectTitleComponentPartial")
                        </span>
                    </a>

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class=""> </span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav  mx-auto ">
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Index">Home </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Menu/Index">Menu <span class="sr-only">(current)</span> </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/About/IndexUI">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/BookATable/Index">Book Table</a>
                            </li>
                        </ul>
                        <div class="user_option">
                            <a href="/Baskets/MenuTableList" class="order_online">
                                <i style="color:white" class="fa-solid fa-cart-shopping"></i>
                            </a>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        <!-- end header section -->
    </div>
    <br />
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-dark mb-30">
                    <a class="breadcrumb-item text-white" href="/Home/Index">Home</a>
                    <a class="breadcrumb-item text-white" href="/Menu/Index">Menu</a>
                    <span class="breadcrumb-item active">Your Basket</span>
                </nav>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Product Name</th>
                            <th>Count</th>
                            <th>Price</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        @foreach (var item in Model)
                        {
                            ViewData["MenuTableID"] = item.MenuTableID;
                            basketTotalPrice = Model.Sum(x => x.TotalPrice);
                            vat = (basketTotalPrice * 18) / 100;
                            count++;
                            <tr>
                                <td class="align-middle">@count</td>
                                <td class="align-middle">@item.ProductName</td>
                                <td class="align-middle">@item.Count</td>
                                <td class="align-middle">@item.ProductPrice₼</td>
                                <td class="align-middle">@item.TotalPrice₼</td>
                                <td class="align-middle btn-delete"><a href="/Baskets/DeleteBasket/@item.BasketID" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <div class="col-log-4 rightgism">
                <h5 class="section-tittle position-relative text-uppercase mb-3"><span class="bg-warning font-weight-bold pr-3" style="padding:5px;">Basket Summary</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div id="container" class="border-bottom pb-2">
                        <div style="padding:5px;" class="d-flex justify-content-between">
                            <h6>Total Amount:</h6>
                            <h6><span id="totalprice">@basketTotalPrice₼</span></h6>
                        </div>
                    </div>
                    <br />
                    <div class="pt-2">
                        <a href="/Baskets/DeleteBaskets/@ViewBag.MenuTableID" class="btn btn-block btn-success font-weight-bold my-3">Complete the Payment</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- footer section -->
    @await Component.InvokeAsync("_UILayoutFooterComponentPartial")
    <!-- jQery -->
    @await Component.InvokeAsync("_UILayoutScriptsComponentPartial")



</body>

</html>ecimal totalpricewithvat = 0;
