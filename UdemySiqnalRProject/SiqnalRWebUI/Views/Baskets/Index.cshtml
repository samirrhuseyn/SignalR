                    <span class="breadcrumb-item active">Your Basket</span>
                </nav>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Product Name</th>
                            <th>Count</th>
                            <th>Price</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        @foreach (var item in Model)
                        {
                            basketTotalPrice = Model.Sum(x => x.TotalPrice);
                            vat = (basketTotalPrice * 18) / 100;
                            totalpricewithvat = vat + basketTotalPrice;
                            count++;
                            <tr>
                                <td class="align-middle">@count</td>
                                <td class="align-middle">@item.ProductName</td>
                                <td class="align-middle">@item.Count</td>
                                <td class="align-middle">@item.ProductPrice₼</td>
                                <td class="align-middle">@item.TotalPrice₼</td>
                                <td class="align-middle btn-delete"><a href="/Baskets/DeleteBasket/@item.BasketID" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <div class="col-log-4">
                <form>
                    <div class="input-group">
                        <input type="text" id="couponcode" class="form-control border-1 p-4" placeholder="Your Coupon Code" />
                        <div>
                            <a style="height:48px; padding-top:11px; margin-left:5px;" class="btn btn-warning" id="btncouponcode">Apply</a>
                        </div>
                    </div>
                </form>
                <br />
                <h5 class="section-tittle position-relative text-uppercase mb-3"><span class="bg-warning font-weight-bold pr-3" style="padding:5px;">Basket Summary</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div id="container" class="border-bottom pb-2">
                        <div style="padding:5px;" class="d-flex justify-content-between">
                            <h6>Total Amount:</h6>
                            <h6><span id="totalprice">@basketTotalPrice₼</span></h6>
                        </div>
                        <div style="padding:5px;" class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">VAT Amount:</h6>
                            <h6 class="font-weight-medium" id="vat">@vat₼</h6>
                        </div>
                    </div>
                    <br />
                    <div class="pt-2">
                        <div style="padding:5px;" class="d-flex justify-content-between">
                            <h5>Total Amount:</h5>
                            <h5><span id="totalpricewithvat">@totalpricewithvat₼</span></h5>
                        </div>
                        <button id="btnchecked" class="btn btn-block btn-success font-weight-bold my-3">Complete the Payment</button>
                    </div>
                </div>
