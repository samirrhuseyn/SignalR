@model SiqnalRWebUI.Dtos.SlideDtos.UpdateSlideDto
@{
    ViewData["Title"] = "Update Slider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Slide Update Page</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form method="post">
                            <input asp-for="SliderID" hidden />
                            <div class="form-group">
                                <label for="squareInput">Title</label>
                                <input asp-for="Title" type="text" class="form-control" required">
                            </div>
                            <div class="form-group">
                                <label for="squareInput">Description</label>
                                <textarea asp-for="Description" class="form-control" required"></textarea>
                            </div>
                            <div class="form-check" hidden>
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Status" type="checkbox" value="@Model.Status">
                                </label>
                            </div>
                            <div class="card-action">
                                <button type="submit" class="btn btn-success">Save</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



