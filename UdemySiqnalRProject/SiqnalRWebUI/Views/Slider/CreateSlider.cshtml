@model SiqnalRWebUI.Dtos.SlideDtos.CreateSlideDto
@{
    ViewData["Title"] = "Create Slider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Slide Create Page</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group">
                                <label for="squareInput">Title</label>
                                <input asp-for="Title" type="text" class="form-control" required">
                            </div>
                            <div class="form-group">
                                <label for="squareInput">Description</label>
                                <textarea asp-for="Description" class="form-control" required"></textarea>
                            </div>
                            <div class="card-action">
                                <button type="submit" class="btn btn-success">Save</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

