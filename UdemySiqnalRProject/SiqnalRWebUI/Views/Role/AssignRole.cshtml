@model List<SiqnalRWebUI.Dtos.IdentityDtos.RoleAssignViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Authorization";
    ViewData["ActiveAdmin"] = "active";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title ml-4">Authorization</h4>
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form method="post" asp-controller="Role" asp-action="AssignRole">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="form-check">
                                <input type="hidden" asp-for="@Model[i].RoleID" />
                                <input type="hidden" asp-for="@Model[i].RoleName" />
                                <label class="form-check-label">
                                    <input type="checkbox" asp-for="@Model[i].Exists" class="form-check-input" />
                                    <span class="form-check-sign">@Model[i].RoleName</span>
                                </label>
                            </div>
                        }
                        <hr />
                        <button type="submit" class="btn btn-success ml-4">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
