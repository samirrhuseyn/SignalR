@model SiqnalRWebUI.Dtos.IdentityDtos.LoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - @await Component.InvokeAsync("_UILayoutProjectTitleComponentPartial")</title>
    <link rel="stylesheet" type="text/css" href="~/html/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/html/css/fontawesome-all.min.css">
    <link rel="stylesheet" type="text/css" href="~/html/css/iofrm-style.css">
    <link rel="stylesheet" type="text/css" href="~/html/css/iofrm-theme22.css">
    <link rel="icon" type="image/x-icon" href="@await Component.InvokeAsync("_ProjectTitleImageComponentPartial")">
</head>
<body>
    <img src="" />
    <div class="form-body without-side">
        <div class="website-logo">
            <img style="width:200px; margin-top:-50px; margin-left:-50px;" src="~/html/images/logo-white-removebg-preview.png" alt="">
        </div>
        <div class="row">
            <div class="img-holder">
                <div class="bg"></div>
                <div class="info-holder">
                    <img src="~/html/images/graphic3.svg" alt="">
                </div>
            </div>
            <div class="form-holder">
                <div class="form-content">
                    <div class="form-items">
                        <h3>Login to account</h3>
                        <p>You can authenticate to the system by entering your username and password to log in to the admin panel.</p>
                        <form method="post">
                            <span asp-validation-for="Username" class="text-danger"></span>
                            <input class="form-control" asp-for="Username" type="text" name="username" placeholder="Username">

                            <span asp-validation-for="Password" class="text-danger"></span>
                            <input class="form-control" asp-for="Password" type="password" name="password" placeholder="Password">
                            <div class="form-button">
                                <button id="submit" type="submit" class="ibtn">Login</button> <a href="/Admin/ForgotPassword">Forget password?</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/html/js/jquery.min.js"></script>
    <script src="~/html/js/popper.min.js"></script>
    <script src="~/html/js/bootstrap.min.js"></script>
    <script src="~/html/js/main.js"></script>
</body>

</html>