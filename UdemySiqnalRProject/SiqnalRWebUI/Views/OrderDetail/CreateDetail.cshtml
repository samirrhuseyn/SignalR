@model SiqnalRWebUI.Dtos.OrderDetailsDtos.CreateOrderDetailDto
@{
    ViewData["Title"] = "Order Detail Create";
    ViewData["OrderActive"] = "active";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Order Detail Create Page</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group">
                                <label for="squareSelect">Order Table</label>
                                <select asp-for="OrderID" asp-items="@ViewBag.OrderValues" class="form-control input-square" id="squareSelect">
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="squareSelect">Product</label>
                                <select asp-for="ProductID" asp-items="@ViewBag.ProductValues" class="form-control input-square" id="squareSelect">
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="squareSelect">Count</label>
                                <input asp-for="Count" type="number" class="form-control" required">
                            </div>
                            <div class="form-group">
                                <label for="squareInput">Total Price</label>
                                <input asp-for="TotalPrice" type="text" class="form-control" required">
                            </div>
                            <div class="card-action">
                                <button type="submit" class="btn btn-success">Save</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
