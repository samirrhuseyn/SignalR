@model List<SiqnalRWebUI.Dtos.DiscountDto.ResultDiscountDto>
<style>
    #info{
        display: inline-block;
        padding: 0px;
        background-color: #222831;
    }
</style>
<section class="offer_section layout_padding-bottom">
    <div class="offer_container">
        <div class="container ">
            <div class="row">
                @foreach(var item in Model)
                {
                    <div class="col-md-6  ">
                    <div class="box ">
                        <div class="img-box">
                            <img src="@item.ImageURL" alt="">
                        </div>
                        <div class="detail-box">
                            <h5>
                                    @item.Title <a role="button" data-toggle="modal" data-target="#discount_@item.DiscountID" id="info" href="#"><i class="fa-regular fa-circle-question"></i></a>
                            </h5>
                            <h6>
                                <span>@item.Amount%</span> Off
                            </h6>
                        </div>
                    </div>
                </div>
                    <div class="modal fade" id="discount_@item.DiscountID" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    @item.Description
                                </div>
                            </div>
                        </div>
                    </div>
                }
                
                
            </div>
        </div>
    </div>
</section>