@model List<SiqnalRWebUI.Dtos.ProductDtos.ResultProductDto>
<section class="food_section layout_padding-bottom">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Our Menu
            </h2>
        </div>
        @await Component.InvokeAsync("_CategoryListByProductComponentPartial")
        <div class="filters-content">
            <div class="row grid">
                @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-lg-4 all @item.CategoryName">
                        <div class="box">
                            <div>
                                <div class="img-box">
                                    <img src="@item.ImageURL" alt="">
                                </div>
                                <div class="detail-box">
                                    <h5>
                                        @item.ProductName
                                    </h5>
                                    <p>
                                        @item.Description
                                    </p>
                                    <div class="options">
                                        <h6>
                                            @item.Price ₼
                                        </h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
        <div class="btn-box">
            <a href="/Menu/Index">
                View More
            </a>
        </div>
    </div>
</section>
<script>
    function showproductid(value) {
        var id = value;
        $.ajax({
            type: 'post',
            data: { item: id },
            url: "/Menu/AddToBasket/" + id,
            contentType: 'json',
            success: function () {
                swal("Id of this product:" + " " + id, "You've made your choice!", "success");
            }
        });
    }
</script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>