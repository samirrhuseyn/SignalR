@model List<SiqnalRWebUI.Dtos.TestimonialDtos.ResultTestimonialDto>
@{
    ViewData["Title"] = "Testimonials";
    ViewData["ActiveTestimonial"] = "active";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Testimonials</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-body">
						<table class="table mt-3">
							<thead>
                                <tr>
									<th scope="col">Name</th>
									<th scope="col">Status</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach(var item in Model)
								{
									<tr>
										<td><img src="@item.ImamgeURL" width="50" style="border-radius:50%;"> @item.Name</td>
										<td>@item.Status</td>
										<td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Delete</a></td>
										<td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-outline-success">Update</a></td>
									</tr>
								}
								
							</tbody>
						</table>
						<a href="/Testimonial/CreateTestimonial" class="btn btn-outline-primary">+ Add Testimonial</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
