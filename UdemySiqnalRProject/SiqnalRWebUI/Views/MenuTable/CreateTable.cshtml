@model SiqnalRWebUI.Dtos.MenuTableDtos.CreateMenuTableDto
@{
    ViewData["Title"] = "Create Table";
    ViewData["MenuTableActive"] = "active";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Table Create Form</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="tablename">Table Name</label>
                                <input type="text" asp-for="Name" class="form-control" id="tablename">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>