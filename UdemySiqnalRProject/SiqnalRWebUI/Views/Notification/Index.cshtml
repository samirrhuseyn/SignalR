@model List<SiqnalRWebUI.Dtos.NotificationDtos.ResultNotificationDto>
@{
    ViewData["Title"] = "Notifications";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Notifications</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    @foreach (var item in Model)
                    {
                        <div class="card-header">
                            <div class="d-flex">
                                <div class="mr-2 mt-2">
                                    <i style="font-size:20px;-webkit-text-fill-color:white; border-radius:50%" class="@item.NotificationTypeIcon p-2 bg-@item.NotificationTypeColor"></i>
                                </div>
                                <div class="card-category">
                                    <span class="text-dark">@item.NotificationDescription</span> <br />
                                    <span><i class="fa-solid fa-calendar mr-1"></i> @item.Date.ToString("MMMM dd, yyyy HH:mm - dddd")</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

