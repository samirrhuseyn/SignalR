@model SiqnalRWebUI.Dtos.ContactDtos.UpdateContactDto
@{
    ViewData["Title"] = "Update Contact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Contact Create Form</div>
                        </div>
                        <input asp-for="ContactID" hidden/>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Location">Location</label>
                                <input type="text" asp-for="Location" class="form-control" id="Location">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Phone">Phone</label>
                                <input type="text" asp-for="Phone" class="form-control" id="Phone">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Mail">Mail</label>
                                <input type="text" asp-for="Mail" class="form-control" id="Mail">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Mail">Iframe</label>
                            <input type="text" asp-for="LocationIframe" class="form-control" id="Iframe">
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="description">Description</label>
                                <textarea rows="5" type="text" asp-for="FooterDescription" class="form-control" id="description"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
