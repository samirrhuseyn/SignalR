@model SiqnalRWebUI.Dtos.BookingDtos.UpdateBookingDto
@{
    ViewData["Title"] = "Update Booking";
    ViewData["ActiveBooking"] = "active";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Booking Update Form</div>
                        </div>
                        <div class="card-body">
                            <input asp-for="BookingID" hidden/>
                            <div class="d-flex">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="name">Name and Surname</label>
                                        <input type="text" asp-for="Name" class="form-control" id="name">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="phonenumber">Phone number</label>
                                        <input type="tel" asp-for="Phone" class="form-control" id="phonenumber">
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="mail">Mail</label>
                                        <input type="email" asp-for="Mail" class="form-control" id="mail">
                                        <span asp-validation-for="Mail" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="personcount">Person Count</label>
                                        <input type="number" asp-for="PersonCount" class="form-control" id="personcount">
                                        <span asp-validation-for="PersonCount" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="date">Booking Date</label>
                                        <input type="datetime-local" asp-for="Date" class="form-control" id="date">
                                        <span asp-validation-for="Date" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-check" hidden>
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="Status" type="checkbox" value="@Model.Status">
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

