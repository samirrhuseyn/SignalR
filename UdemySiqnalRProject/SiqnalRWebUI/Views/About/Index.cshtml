@model List<SiqnalRWebUI.Dtos.AboutDtos.ResultAboutDto>
@{
    ViewData["Title"] = "About Us";
    ViewData["ActiveAbout"] = "active";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">About Us</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-body">
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Title</th>
									<th scope="col">Description</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-outline-danger">Delete</a></td>
										<td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-outline-success">Update</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/About/CreateAbout" class="btn btn-outline-primary">+ Add About</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>