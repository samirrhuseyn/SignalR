@model SiqnalRWebUI.Dtos.OrderDtos.GetOrderDto
@{
    ViewData["Title"] = "AddDetail";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Order Create Page</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form method="post" asp-controller="OrderDetail" asp-action="Index">
                            <input value="@Model.OrderID" hidden/>
                            <div class="form-group">
                                <label for="squareInput">Count</label>
                                <input name="Count" type="number" class="form-control" required">
                            </div>
                            <div class="form-group">
                                <label for="squareSelect">Product</label>
                                <select name="ProductID" asp-items="@ViewBag.Values" class="form-control input-square" id="squareSelect">
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="squareInput">Total Price</label>
                                <input name="TotalPrice" type="text" class="form-control" required">
                            </div>
                            <div class="card-action">
                                <button type="submit" class="btn btn-success">Submit</button>
                                <button class="btn btn-danger">Cancel</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>